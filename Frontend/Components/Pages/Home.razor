@page "/"
@inject MoviesClient Client

<PageTitle>My Movies</PageTitle>

<div class="row">
    <h1 class="text-center text-primary">My Movies</h1>
    @if(movies is null)
    {
        <p class="text-center">Loading movies...</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach(var movie in movies)
            {
                <div class="card border-info text-center">
                    <div class="card-header">
                        <h5 class="card-title">@movie.Name</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@movie.Genre?.Name</p>
                        <p class="card-text">@movie.Price.ToString("C")</p>
                        <p class="card-text">@movie.ReleaseDate</p>
                        <a class="btn btn-info" role="button" href="/addEditMovie/@movie.Id">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@DeleteMovieModal.GetModalId(movie)">
                            <i class="bi bi-trash"></i>
                        </button>
                        <DeleteMovieModal Movie="@movie" />
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private Movie[]? movies;

    protected override async Task OnInitializedAsync()
    {
        movies = await Client.GetMoviesAsync();
    }
}
